<assembly>
    <id>distro</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <files>
        <file>
            <source>${project.build.directory}/${artifact.artifactId}-${artifact.version}.jar</source>
            <outputDirectory>avro-repo-${project.version}/lib</outputDirectory>
        </file>
    </files>
    <fileSets>
        <!-- Distro files, readme, licenses, etc -->
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>avro-repo-${project.version}/bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${basedir}/conf</directory>
            <outputDirectory>avro-repo-${project.version}/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>avro-repo-${project.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>
</assembly>
